:root {
  --token-null: transparent;
  --token-text: #ccc;
}

/* пример другого слоя с глубокой вложенностью */
.header {
  display: flex;
  background-color: var(--color-primary);

  .title {
    font-weight: 700;
    color: var(--token-text);

    @media (width <= 768px) {
      font-weight: normal;
    }
  }
}

body {
  font-size: 14px;
  background-color: var(--token-null);
} 